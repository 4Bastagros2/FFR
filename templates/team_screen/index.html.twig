{% extends 'base.html.twig' %}

{% block title %}Sélectionnez une équipe
{% endblock %}

{% block body %}

{% include 'first_nav.html.twig' %}

{% if app.user %}
<div class="team-wrapper">
	<div class="team-grid d-flex">
		{% for team in app.user.coaches %}
		<a href="/match/calendar/{{ team.id }}">
			<div class="team-card">
				<div class="card-header">
					<p class="team-cat">{{ team.category }}</p>
				</div>
				<div class="card-body">
					<img src="{{asset('img/jjj.gif')}}" alt="">
				</div>
				<div class="card-footer">
					<button class="btn-lg btn-edit pointer"><a href="{{path('team_form', {id_team: team.id})}}">Modifier</a></button>
					<button class="btn-lg btn-delete pointer"><a href="{{path('del_team', {id_team:team.id})}}">Supprimer</a></button>
				</div>
			</div>
		</a>

		{% endfor %}
	</div>
	<a class="add-team-btn pointer">+</a>
</div>



{% include 'team_form/index.html.twig' with {'form': form} %}


{% endif %}
{% endblock %}