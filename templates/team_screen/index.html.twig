{% extends 'base.html.twig' %}

{% block title %}Hello TeamScreenController!{% endblock %}

{% block body %}

{% include 'first_nav.html.twig' %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
{% if app.user %}
    <h2>{{app.user.email}} </h2>
    <h2>Club : <b>{{ app.user.finances.name }}</b></h2>
    <div style="display: flex; justify-content:space-around;">
        {% for team in app.user.coaches %}
    <div style="padding: 2em; border: 1px solid red; background-color: #aaa"><a>
            <p>{{ team.id }}</p>
            <p>{{ team.category }}</p>

    </a></div>
        {% endfor %}
    </div>
{% endif %}

</div>
{% endblock %}
