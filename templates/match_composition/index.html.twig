            <div class="droppable field-position" data-id-position="12"><p>12</p></div>
            <div class="droppable field-position" data-id-position="13"><p>13</p></div>
            <div class="droppable field-position" data-id-position="14"><p>14</p></div>
        </div>
        <div class="field-row" style="width: 602px;">
            <div class="droppable field-position" data-id-position="15"><p>15</p></div>
        </div>
    </div>
    </div>

    <div data-id-position="0" id="players_list" class="droppable">
    {% for player in players %}
        {% include 'match_composition/playercard.html.twig' with {'id': player.id, 'name': player.firstname} %}
    {% endfor %}
    </div>


<div>



</div>
