{% extends 'base.html.twig' %}

{% block title %}Hello MatchCalendarController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>



<ul>
	{% for match in matches %}
		<li>{{ match.matchtype.name }}</li>
        <li>{{ match.localteam }}</li>
        <li>{{ match.visitorteam }}</li>
        <li>{{ match.date |date("m/d/Y") }}</li>
        <li>{{ match.duration |date('H:i:s') }}</li>
        {# <li>{{ match.stats }}</li> #}
        {# <li>{{ match.composition }}</li> #}
	{% endfor %}
</ul>





{% endblock %}
